{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "serve",
      "type": "shell",
      "command": "npx",
      "args": ["serve", ".", "-p", "3000"],
      "options": { "cwd": "${workspaceFolder}" },
      "isBackground": true,
      "problemMatcher": {
        "owner": "serve",
        "pattern": { "regexp": "^$" },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Serving|localhost:3000",
          "endsPattern": ".*"
        }
      },
      "presentation": { "reveal": "silent", "panel": "shared" }
    },
    {
      "label": "Open Simple Browser",
      "type": "shell",
      "command": "${input:openSimpleBrowser}",
      "problemMatcher": [],
      "presentation": { "reveal": "never" }
    },
    {
      "label": "Preview in Editor",
      "dependsOrder": "sequence",
      "dependsOn": ["serve", "Open Simple Browser"],
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "openSimpleBrowser",
      "type": "command",
      "command": "simpleBrowser.show",
      "args": ["http://localhost:3000"]
    }
  ]
}
